<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    <link rel="stylesheet" href="/stylesheet/dashboard.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>Admin Dashboard</h1>
            <a href="/shop" class="btn">Back to Shop</a>
        </div>
        <div class="dashboard-section">
            <h2>Manage Orders</h2>
            <form action="/Delivery" method="GET" class="filter-form">
                <div class="form-group">
                    <label>From:</label>
                    <input type="date" name="orderStartDate">
                </div>
                <div class="form-group">
                    <label>To:</label>
                    <input type="date" name="orderEndDate">
                </div>
                <button type="submit" class="btn-product">Filter Orders</button>
            </form>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td data-label="Date"><%= order.orderDate.toLocaleDateString() %></td>
                            <td data-label="Customer"><%= order.customer.name %></td>
                            <td data-label="Phone"><%= order.customer.phone %></td>
                            <td data-label="Address"><%= order.customer.address %></td>
                            <td data-label="Product"><%= order.productName %></td>
                            <td data-label="Price">$<%= order.price.toFixed(2) %></td>
                            <td data-label="Status"><%= order.status %></td>
                            <td data-label="Action">
                                <form action="/orders/delete/<%= order._id %>" method="POST" style="margin:0;">
                                    <button type="submit" class="btn-product">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="dashboard-section">
            <h2>Manage Users</h2>
             <form action="/Delivery" method="GET" class="filter-form">
                <div class="form-group">
                    <input type="text" name="userSearch" placeholder="Search by username...">
                </div>
                <button type="submit" class="btn-product">Search Users</button>
            </form>
            <table>
                 <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td data-label="Username"><%= user.username %></td>
                            <td data-label="Email"><%= user.email %></td>
                            <td data-label="Role"><%= user.role %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
